@{
}

@model ShoppingCart

<h2>Check out now</h2>
<p></p>

<form method="post" asp-action="Checkout" asp-controller="Cart">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4>Contact Information</h4>
    <div class="form-check">
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="LasstName">Last Name:</label>
        <input asp-for="LasstName" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" class="form-check" />
    </div>

    <h4>Shipping Address</h4>
    <div class="form-check">
        <label asp-for="AddressLine1">AddressLine1:</label>
        <input asp-for="AddressLine1" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="AddressLine2">AddressLine2:</label>
        <input asp-for="AddressLine2" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="AddressLine3">AddressLine3:</label>
        <input asp-for="AddressLine3" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="Zip">Zip:</label>
        <input asp-for="Zip" class="form-check" />
    </div>
    <div class="form-check">
        <label asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-check" />
    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="SaveCart"/>
    </div>
</form>