@{
}

@model IEnumerable<string>

<div class="d-block gap-3">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a><br />

    @foreach (string b in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@b" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == b ? "btn-primary" : "btn-outline-secondary")">@b</a><br />
    }
</div>